<div class='container mt-3'>
<% if notice.present? %>
<div class="alert alert-success" role="alert"><%= notice %></div>
<% elsif alert.present? %>
<div class="alert alert-danger" role="alert"><%= alert %></div>
<% end %>
<div class='task-header d-flex justify-content-between align-items-center'>
<h1>Tasks</h1>
<%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
</div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col" class="text-center">First</th>
        <th scope="col" class="text-center">Last</th>
        <th scope="col" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each_with_index do |task, index| %>
        <tr>
          <th class="text-center" scope="row"><%= index+1 %></th>
          <td class="text-center"><%= task.title %></td>
          <td class="text-center"><%= task.description %></td>
          <td class="text-center"><div class="d-flex justify-content-center">
                <%= link_to "edit", edit_task_path(task), class: "btn btn-primary" %>
                <span class='action_span'>
                  <%= button_to "delete", task_path(task), method: :delete, 
                  data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></span>
              </div>
          </td>
      <% end %>
    </tbody>
  </table>
</div>
